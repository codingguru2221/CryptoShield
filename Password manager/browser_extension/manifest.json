{
  "manifest_version": 3,
  "name": "Pendrive Password Manager",
  "version": "1.0",
  "description": "Auto-fill passwords from pendrive-based password manager",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pendrive Password Manager"
  }
}
